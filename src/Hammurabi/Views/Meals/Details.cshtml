@model Hammurabi.Models.Meal

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Meal</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.PreparationTime)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PreparationTime)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

        <dt>
            @Html.DisplayName("Ingredient List:")
        </dt>
        <dd>
            <table class="table">
                <tr>
                    <th>List:</th>
                </tr>
                @*Code for display each item of Ingredient list for each Meal. Ingredients are order by IngredientID.*@
                @foreach (var item in Model.MealIngredients.OrderBy(a => a.IngredientID))
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ingredient.Name)
                        </td>
                    </tr>
                }
            </table>
        </dd>

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
